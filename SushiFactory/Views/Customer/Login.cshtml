@model SushiFactory.Models.Customer

@{
    ViewBag.Title = "התחברות";
}

<h2 dir="rtl">התחברות</h2>

<section id="loginForm" dir="rtl">
    <h4 >אנא מלא את פרטייך:</h4>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email)
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password)
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>
        </div>
        <p dir="rtl">
            <input type="submit" value="התחבר" />
        </p>
        <br />
        <b><span class="error" style="color:red">@ViewBag.ErrorMsg</span></b>
        <br />
        <br />
        <p dir="rtl">
            אין לך חשבון? @Html.ActionLink("הירשם", "Create")
        </p>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

